{
  "manifest_version": 3,
  "name": "Private AI Assistant - McGurk & Zenith",
  "version": "1.0.0",
  "description": "Private AI assistant - Exclusively for phill.mcgurk@gmail.com and zenithfresh25@gmail.com",

  "oauth2": {
    "client_id": "YOUR_PRIVATE_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile",
      "https://www.googleapis.com/auth/drive",
      "https://www.googleapis.com/auth/spreadsheets",
      "https://www.googleapis.com/auth/calendar",
      "https://www.googleapis.com/auth/gmail.modify"
    ]
  },

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "identity",
    "identity.email",
    "contextMenus",
    "notifications",
    "clipboardRead",
    "clipboardWrite",
    "webNavigation",
    "scripting"
  ],

  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],

  "background": {
    "service_worker": "background-fixed.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "private-auth.js",
        "images/*",
        "floating-widget-enhanced.js",
        "floating-widget-enhanced.css",
        "popup/popup-chat.html",
        "popup/popup-enhanced.html",
        "popup/popup-enhanced.css",
        "popup/popup-enhanced.js",
        "n8n-docs/*.md",
        "chrome-extension-docs/*.md",
        "opal-ai-docs/*.md",
        "opal-docs-integration.js",
        "seo-analysis.js",
        "seo-integration.js",
        "seo-content-helper.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "action": {
    "default_popup": "popup/popup-simple.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "AI Assistant - Simple & Easy"
  },

  "options_page": "options/options-enhanced.html",

  "options_ui": {
    "page": "options/options-enhanced.html",
    "open_in_tab": true
  },

  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
