{
  "manifest_version": 3,
  "name": "n8n Professional Agent",
  "version": "1.0.0",
  "description": "Professional workflow automation agent for n8n - Enhance your browsing with powerful automation capabilities",

  "minimum_chrome_version": "102",

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "identity",
    "identity.email",
    "contextMenus",
    "notifications",
    "clipboardRead",
    "clipboardWrite",
    "webNavigation",
    "scripting",
    "alarms",
    "declarativeNetRequest"
  ],

  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false,
      "match_about_blank": false
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "images/*",
        "floating-widget.js",
        "popup/popup-chat.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "n8n AI Assistant - Click to open"
  },

  "options_page": "options/options.html",

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },

  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "commands": {
    "toggle-widget": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Toggle n8n Assistant widget"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+N",
        "mac": "Command+Shift+N"
      }
    }
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "declarative_net_request": {
    "rule_resources": []
  }
}