{
  "name": "n8n-ai-assistant",
  "version": "1.0.0",
  "description": "n8n AI Assistant with Playwright MCP integration",
  "main": "background.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "echo \"No build process required for basic extension\"",
    "watch": "echo \"Use Chrome's extension reload for development\"",
    "package": "zip -r extension.zip . -x '*.git*' 'node_modules/*' '*.zip' 'package*.json' 'README.md'",
    "lint": "eslint *.js popup/*.js options/*.js",
    "format": "prettier --write '**/*.{js,html,css,json}'",
    "mcp:start": "npx @playwright/mcp@latest --port 8931",
    "mcp:headed": "npx @playwright/mcp@latest --port 8931 --browser chrome",
    "mcp:isolated": "npx @playwright/mcp@latest --port 8931 --isolated",
    "mcp:debug": "npx @playwright/mcp@latest --port 8931 --browser chrome --save-trace --save-session"
  },
  "keywords": [
    "chrome-extension",
    "manifest-v3",
    "browser-extension",
    "chrome",
    "template"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^2.8.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "@playwright/mcp": "latest",
    "@upstash/context7-mcp": "^1.0.17",
    "playwright": "^1.40.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/chrome-extension-template.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/chrome-extension-template/issues"
  },
  "homepage": "https://github.com/yourusername/chrome-extension-template#readme",
  "engines": {
    "node": ">=14.0.0"
  }
}
